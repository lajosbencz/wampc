{
  "compilerOptions": {
    // # Project Options
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "outDir": "dist",
    "removeComments": true,
    "target": "ESNext",
    "declaration": true,
    // # Strict Checks
    "strict": true,
    // # Module Resolution
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    // # Advanced
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "demo",
    "node_modules",
    "src/**/*.test.ts"
  ]
}
